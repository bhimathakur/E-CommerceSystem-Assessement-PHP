<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}ECS!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
			<link rel="stylesheet" href="{{ asset('css/style.css?v5') }}">

		{% endblock %}

		{% block javascripts %}
		
		
		{% endblock %}
	</head>
	<body>
		{% block header %}
			<nav class="navbar navbar-expand-lg navbar-light bg-light">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path('index')}}">ECS</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					{% if app.user %}
						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav me-auto mb-2 mb-lg-0">
								<li class="nav-item">
									<a class="nav-link {% if '/admin/category' in app.request.requestUri %} active {% endif %}" aria-current="page" href="{{path('category_list')}}">Category Management</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% if '/admin/product' in app.request.requestUri %} active {% endif %}" aria-current="page" href="{{path('product_list')}}">Product Management</a>
								</li>
								<li class="nav-item active"></li>

								<li class="nav-item">
									<a class="nav-link {% if '/admin/order' in app.request.requestUri %} active {% endif %}" href="{{path('order_list')}}" role="button">
										Order Management
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% if '/admin/content' in app.request.requestUri %} active {% endif %}" href="{{path('content_list')}}">Content Management</a>
								</li>

							</ul>
							<div class="d-flex">
								<h5>Welcome,
									<a href="{{path('category_list')}}">{{app.user.firstName}}</a>
								</h5>
								&nbsp;&nbsp;&nbsp;
								<a href="{{path('app_logout')}}" class="btn btn-secondary">Logout
								</a>

							{% else %}
								<div class="d-flex">
									<a href="{{path('app_login')}}" class="btn btn-primary">Login</a>
									&nbsp;&nbsp;&nbsp;
									<a href="#" class="btn btn-secondary">Register</a>
								{% endif %}

							</div>
						</div>
					</div>
				</nav>
			{% endblock %}
			{% block body %}{% endblock %}
			<div style="margin-top:35px;"></div>

			{% block footer %}
				<div class="footer mt-auto" style="position: fixed; bottom: 0; width: 100%; z-index: 100">
					<span>
						<a href="{{path('index')}}">ECS</span>
						<span>About Us</span>
						<span>Contact Us</span>

					</div>
				{% endblock %}
				<script>
					const rows = document.querySelectorAll('.row');
          rows.forEach((row, index) => {
            (index % 2 == 0) ? row.classList.add('even-row') : row.classList.add('odd-row');
          });
				</script>
		</body>
		</html>
	</body>
</html>
