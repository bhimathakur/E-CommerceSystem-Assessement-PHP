{% extends 'base.html.twig' %}
{% block body %}

	<div class="container" style="max-width: 1360px;">
		<h4>
			<a href="{{path('order_track')}}" class="link-primary">Track Order</a>
		</h4>
		<div class="row" style=" background:lightgray; font-weight:bold; ">
			<div class="col-md-3">Order Id</div>
			<div class="col-md-3">Order Date</div>
			<div class="col-md-3">Total Price</div>
			<div class="col-md-3">Order Status</div>
		</div>
		{% for order in orders %}
			<div class="row" style="border: 1px solid; cellspacing:0px; cellpading:0px">

				<div class="col-md-3">100{{order.id}}</div>
				<div class="col-md-3">{{order.date|date("d-m-Y")}}</div>
				<div class="col-md-3">{{order.price * order.qty}}</div>
				<div class="col-md-3">{{order.orderStatus.value}}</div>
			</div>
		{% endfor %}

		{% if orders is empty %}
			<div class='row' style='text-align:center; color:red;'>
				<div class="col-md-10">No record found</div>
			</div>
		{% endif %}
	</div>
<script>
	const rows = document.querySelectorAll('.row');
    rows.forEach((row, index) => {
        (index % 2 == 0) ? row.classList.add('even-row') : row.classList.add('odd-row');
    });
	</script>
{% endblock %}
