{% extends 'base.html.twig' %}
{% block body %}

	<div class="container" style="max-width: 1360px;">
		<h4>
			<a href="{{path('product_add')}}" class="link-primary">Add Product</a>
		</h4>
		<div class="row" style="font-weight:bold">
			<div class="col-md-2">Title</div>
			<div class="col-md-2">Category</div>
			<div class="col-md-2">Image</div>
			<div class="col-md-1">Price</div>

			<div class="col-md-3">Description</div>
			<div class="col-md-1">Status</div>
			<div class="col-md-1">Action</div>

		</div>

		{% for product in products %}
			<div class='row'>
				<div class="col-md-2">{{product.title}}</div>
				<div class="col-md-2">{{product.category.title}}</div>
				<div class="col-md-2"><img src='{{asset("upload/#{product.image}")}}' width="100px" height="100px" alt="product image"></div>
				<div class="col-md-1">{{product.price}}</div>

				<div class="col-md-3">{{product.description|striptags|slice(0,50)}}</div>
				<div class="col-md-1">{{product.status.value}}</div>
				<div class="col-md-1">
					<a href="{{path('product_edit', {id: product.id})}}" class="link-secondary">Edit</a>
				</div>
			</div>
		{% endfor %}
		{% if products is empty %}
			<div class='row' style='text-align:center; color:red;'>
				<div class="col-md-10">No record found</div>
			</div>
		{% endif %}
	</div>
{% endblock %}
